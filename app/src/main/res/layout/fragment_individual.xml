<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/linear_layout">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/header_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_backgroud"
            android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/ic_user_default"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_head"
                android:textSize="17sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="18dp"/>

        <ImageView
                android:id="@+id/iv_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_badge"
                android:layout_toEndOf="@id/tv_name"
                android:paddingTop="12dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜鸟"
                android:layout_toEndOf="@id/iv_badge"
                android:layout_marginTop="12dp"
                android:layout_marginStart="4dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_forward"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorGray"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_backgroud"
                    android:paddingStart="20dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/item_board_buttom">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_form"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我的预订"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_forward"
                            android:layout_marginEnd="10dp"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/collect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/item_board_buttom">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            android:layout_marginEnd="10dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="我的收藏"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_forward"
                            android:layout_marginEnd="10dp"/>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/item_board_buttom">

                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_body"
                            android:layout_marginEnd="10dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="身体数据"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_forward"
                            android:layout_marginEnd="10dp"/>


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/card_backgroud">

                    <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_excercise"
                            android:layout_marginEnd="10dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="运动数据"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_forward"
                            android:layout_marginEnd="10dp"/>


                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/colorGray"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_backgroud"
                    android:paddingStart="20dp"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/item_board_buttom">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_setting"
                            android:layout_marginEnd="10dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="设置"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_forward"
                            android:layout_marginEnd="10dp"/>


                </LinearLayout>

                <LinearLayout
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/card_backgroud">

                    <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_about"
                            android:layout_marginEnd="10dp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" 关于"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"/>

                    <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_forward"
                            android:layout_marginEnd="10dp"/>


                </LinearLayout>

            </LinearLayout>

            <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_blue"
                    android:text="注销登录"
                    android:textSize="17sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>